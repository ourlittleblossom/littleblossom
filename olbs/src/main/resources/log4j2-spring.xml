<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="OLBS" packages="">
<Properties>
    <Property name="LOG_PATH">${sys:catalina.home}/../logs/Olbs</Property>
    <!-- <Property name="LOG_PATH">/Users/ujjwalgupta/Documents/Olbs/logs/</Property> -->
      </Properties>
  <Appenders>
    <RollingFile  name="OLBS_LOGS" fileName="${LOG_PATH}/OLBS.log"
        filePattern="${LOG_PATH}/OLBS-%d{MM-dd-yyyy}-%i.log">
      <PatternLayout>
        <Pattern>[%d][%p][%t] - %m%n%l</Pattern>
      </PatternLayout>
      <Policies>
          <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
          <SizeBasedTriggeringPolicy size="100 MB" />
      </Policies>
    </RollingFile>
 
  </Appenders>
 
  <Loggers>

 
    <Root level="DEBUG">
                <AppenderRef ref="OLBS_LOGS"/>
        </Root>
 
        <!-- Limit the org.hibernate category to INFO as its DEBUG is verbose -->
        <logger name="org.hibernate" level="INFO" additivity = "false">
                <AppenderRef ref="OLBS_LOGS"/>
        </logger>
 
        <logger name="org.springframework.web.client.RestTemplate" level="INFO" additivity = "false">
                <AppenderRef ref="OLBS_LOGS"/>
        </logger>
 
  </Loggers>
</Configuration>